# Hexaware AI Use Case Value Framework - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/hexaware_ai_framework

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Port for the application server (default: 5000)
PORT=5000

# Node environment (development, production)
NODE_ENV=production

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
# Secret key for session encryption (generate a strong random string)
# You can generate one with: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-change-this

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
# Maximum file upload size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Local storage path for uploaded files (presentations, PDFs)
UPLOAD_DIR=./uploads

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================
# Add any external API keys or service configurations here
# Example: Email service, cloud storage, etc.

# ============================================================================
# FRONTEND CONFIGURATION (Vite)
# ============================================================================
# Any environment variables prefixed with VITE_ will be available in the frontend
# VITE_API_BASE_URL=http://localhost:5000
